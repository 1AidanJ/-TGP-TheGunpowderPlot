  <ThingDef ParentName="BaseMakeableGun">
    <defName>TGP_MatchlockArquebus</defName>
    <label>Matchlock Arquebus</label>
    <description>An ancient matchlock musket design, sporting a fishtail stock. One of the earliest iterations of conventional firearms, this weapon functions through the use of a burning matchcord which is lowered into the pan with a lever trigger. A primitive weapon, from a less civilized age.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Weapons/Matchlock-Arquebus-(256)</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <weaponClasses>
      <li>LongShots</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>11000</WorkToMake>
      <Mass>4.50</Mass>
      <Bulk>14.0</Bulk>
      <ShotSpread>0.41</ShotSpread>
      <SwayFactor>1.85</SwayFactor>
      <SightsEfficiency>0.8</SightsEfficiency>
      <RangedWeapon_Cooldown>1.03</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>70</Steel>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <recoilAmount>2.83</recoilAmount>
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_FastMusketBall</defaultProjectile>
        <warmupTime>1.4</warmupTime>
        <range>24</range>
        <soundCast>Shot_CE_Musket</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
